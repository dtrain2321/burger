<h1>Burgers!</h1>

<div id="burger-image"></div>


<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burger-text" name="burger_name">
  </div>

  <button type="submit">Add Burger</button>
</form>


<h2>Choose a burger to eat!</h2>

<ul>
  {{!-- Call table name burgers --}}
  {{#each burgers}}
  {{! unless = false for devoured db column values}}
    {{#unless devoured}}
    {{! calls burger-block.handlebars html in root of partials folder}}
      {{>burger-block}}
    {{/unless}}
  {{/each}}

  {{!-- </div> --}}
</ul>

<h2>Burgers Devoured</h2>

<ul>
  {{#each burgers}}
  {{! id = true for devoured db column value}}
    {{#if devoured}}
      
      {{>burger-block}}


    {{/if}}
  {{/each}}
</ul>
